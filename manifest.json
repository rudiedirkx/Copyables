{
	"name": "Copyables",
	"version": "1.1",
	"manifest_version": 2,

	"description": "Makes the text/label of focused links copyable. Also via contextmenu.",
	"icons": {
		"128": "logo_128.png",
		"48": "logo_48.png"
	},

	"permissions": [ "activeTab", "contextMenus" ],
	"background": {
		"scripts": [ "copyables.logic.js", "copyables.background.js" ]
	},

	"content_scripts": [{
		"all_frames": true,
		"run_at": "document_start",
		"js": [ "copyables.logic.js", "copyables.content.js" ],
		"matches": [ "http://*/*", "https://*/*" ]
	}]
}
